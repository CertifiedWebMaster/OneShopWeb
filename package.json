{
  "name": "@ecomplus/storefront-template",
  "version": "0.1.0",
  "description": "Reusable & upgradable views and scripts for E-Com Plus storefront",
  "main": "dist/lib/storefront-template.js",
  "module": "template/js/index.js",
  "browser": "dist/lib/storefront-template.js",
  "jsdelivr": "dist/lib/storefront-template.js",
  "unpkg": "dist/storefront.js",
  "scripts": {
    "serve": "storefront-pack serve",
    "build:template": "storefront-pack build",
    "build": "NODE_ENV=production webpack",
    "release": "rm -rf ./dist; npm run build & standard-version",
    "postinstall": "node ./postinstall.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/storefront-template.git"
  },
  "keywords": [
    "ecomplus",
    "storefront",
    "jamstack-ecommerce",
    "pwa-ecommerce",
    "ejs-template",
    "store-theme",
    "ecommerce-template",
    "ecommerce-theme"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/storefront-template/issues"
  },
  "homepage": "https://github.com/ecomclub/storefront-template#readme",
  "dependencies": {
    "@ecomplus/client": "^1.0.1",
    "@ecomplus/search-engine": "^1.0.1",
    "@ecomplus/storefront-twbs": "^3.0.5",
    "@ecomplus/utils": "^1.0.1",
    "@glidejs/glide": "^3.3.0",
    "cash-dom": "^4.1.4",
    "core-js": "^3.2.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "photoswipe": "^4.1.3",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@ecomplus/storefront-framework": "^3.2.3",
    "babel-eslint": "^10.0.2",
    "husky": "^3.0.3",
    "standard": "^13.1.0",
    "standard-version": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "last 1 version",
    "not dead",
    "> 0.2%"
  ],
  "standard": {
    "parser": "babel-eslint"
  }
}
