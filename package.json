{
  "name": "@ecomplus/storefront-app",
  "version": "1.0.0-alpha.2",
  "description": "Vue.js ecommerce app with cart, checkout and account pages",
  "main": "dist/storefrontApp.umd.min.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build src/main.js --target lib --name storefrontApp",
    "build:spa": "vue-cli-service build",
    "build:all": "npm run build && npm run build:spa -- --no-clean",
    "lint": "vue-cli-service lint",
    "release": "npm run build && standard-version --prerelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/storefront-app.git"
  },
  "keywords": [
    "ecomplus",
    "storefront",
    "jamstack-ecommerce",
    "vuejs-ecommerce",
    "store-app",
    "ecommerce-app",
    "checkout"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/storefront-app/issues"
  },
  "homepage": "https://github.com/ecomclub/storefront-app#readme",
  "dependencies": {
    "@ecomplus/storefront-template": "^1.8.2",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@ecomplus/client": "^1.1.3",
    "@ecomplus/storefront-twbs": "^3.5.0",
    "@ecomplus/utils": "^1.0.1",
    "@ecomplus/widget-minicart": "^0.6.7",
    "@ecomplus/widget-product": "^0.3.11",
    "@ecomplus/widget-user": "^0.9.2",
    "@vue/cli-plugin-babel": "^4.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^4.0.0-rc.3",
    "@vue/cli-plugin-router": "^4.0.0-rc.3",
    "@vue/cli-plugin-vuex": "^4.0.0-rc.3",
    "@vue/cli-service": "^4.0.0-rc.3",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "core-js": "^3.2.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": "^3.0.5",
    "lint-staged": "^8.1.5",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "standard": "^14.3.1",
    "standard-version": "^7.0.0",
    "vue-router": "^3.1.3",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
