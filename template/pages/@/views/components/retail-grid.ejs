<%
// run search request first
await opt.search.fetch()
const items = await opt.search.getItems()
%>

<section class="retail-grid row">
  <% for (let i = 0; i < items.length; i++) { %>
    <div class="col-6 col-md-4 col-lg-3">
      <%- await include('product-card', { _, opt: { item: items[i] } }) %>
    </div>
  <% } %>
</section>
