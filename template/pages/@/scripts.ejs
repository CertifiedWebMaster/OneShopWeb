<%
const { resource, body, collection, slug } = await _.resolveRoute()
let echoContext = {}
if (body) {
  // store resource
  // remove large description strings if any
  echoContext = {
    resource,
    body: {
      ...body,
      body_html: '',
      body_text: ''
    }
  }
} else if (slug) {
  // cms folder collection
  // keep the slug only
  echoContext = {
    collection,
    slug,
    content: {}
  }
}
%>

<script>
  window.$settings = <%- JSON.stringify(_.settings) %>
  window.$context = <%- JSON.stringify(echoContext) %>
</script>
<script src="/storefront.js"></script>
