{
  "name": "@ecomplus/storefront-app",
  "version": "1.11.1",
  "description": "Vue.js ecommerce app with cart, checkout and account pages",
  "main": "dist/lib/js/app.js",
  "scripts": {
    "serve": "vue-cli-service serve __tests__/index.js",
    "build": "vue-cli-service build --lib",
    "build:spa": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "release": "npm ddp && standard-version && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/storefront-app.git"
  },
  "keywords": [
    "ecomplus",
    "storefront",
    "jamstack-ecommerce",
    "vuejs-ecommerce",
    "store-app",
    "ecommerce-app",
    "checkout"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/storefront-app/issues"
  },
  "homepage": "https://github.com/ecomclub/storefront-app#readme",
  "peerDependencies": {
    "@ecomplus/utils": "^1.2.0",
    "core-js": "3.x"
  },
  "dependencies": {
    "@ecomplus/client": "^2.0.2",
    "@ecomplus/i18n": "^1.3.1",
    "@ecomplus/passport-client": "^1.0.6",
    "@ecomplus/shopping-cart": "^2.1.1",
    "@ecomplus/storefront-twbs": "^4.0.6",
    "axios": "^0.19.2",
    "card-validator": "^6.2.0",
    "cleave.js": "^1.5.3",
    "credit-card-type": "^8.3.0",
    "lodash.clonedeep": "^4.5.0",
    "vue": "^2.6.11",
    "vue-cleave-component": "^2.1.3",
    "vue-clipboard2": "^0.3.1",
    "vue-router": "^3.1.5",
    "vue2-transitions": "^0.3.0",
    "vuex": "^3.1.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
