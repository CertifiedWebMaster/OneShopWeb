{
  "packages": [
    "@ecomplus/*"
  ],
  "command": {
    "create": {
      "homepage": "https://github.com/ecomclub/storefront#readme",
      "author": "E-Com Club <ti@e-com.club>",
      "license": "MIT"
    },
    "version": {
      "allowBranch": ["master", "v*-dev"],
      "conventionalCommits": true,
      "createRelease": "github",
      "gitRemote": "origin",
      "message": "chore(release): publish :tada:",
      "preid": "rc"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/*.md"
  ],
  "version": "independent"
}
